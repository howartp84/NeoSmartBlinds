<?xml version="1.0"?>

<Devices>
	<!-- This custom device illustrates how a plugin can update custom device
	states which can be used in Device State Changed triggers, conditionals,
	and inspected on Control Pages. The python runConcurrentThread() method
	will update the states every second.
	-->
	<Device type="custom" id="controller">
		<Name>Neo Smart Controller</Name>
		<ConfigUI>
			<Field id="devIP" type="textfield">
				<Label>Controller IP Address:</Label>
			</Field>
			<Field id="devCtrlID" type="textfield">
				<Label>Controller ID:</Label>
			</Field>
			<Field id="label1" type="label">
        <Label>Controller ID is 24 characters and can be found in the Neo App.</Label>
    </Field>
		</ConfigUI>
		<States>
			<State id="devIP">
				<ValueType>String</ValueType>
				<TriggerLabel>IP Address</TriggerLabel>
				<ControlPageLabel>IP Address</ControlPageLabel>
			</State>
		</States>
		<UiDisplayStateId>devIP</UiDisplayStateId>
	</Device>

	<Device type="custom" id="blind">
		<Name>Neo Blind</Name>
		<ConfigUI>
			<Field id="blindID" type="textfield">
				<Label>Blind or Room Code (eg 036.002-01):</Label>
			</Field>
			<Field id="label2" type="label">
        <Label>This can be found in the Neo App under Advanced Controls.</Label>
    	</Field>
    	<Field id="label3" type="label">
        <Label></Label>
    	</Field>
    	<Field id="label4" type="label">
        <Label>Entering a Room Code will operate all blinds in this room as configured in the App.</Label>
    	</Field>
		</ConfigUI>
				<States>
			<State id="devAddress">
				<ValueType>String</ValueType>
				<TriggerLabel>Address</TriggerLabel>
				<ControlPageLabel>Address</ControlPageLabel>
			</State>
		</States>
		<UiDisplayStateId>devAddress</UiDisplayStateId>
	</Device>

</Devices>
